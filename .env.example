# Docker Compose Environment Variables
# Copy this file to .env and adjust values as needed

# Database Configuration
POSTGRES_DB=stockcontrol
POSTGRES_USER=stockuser
POSTGRES_PASSWORD=stockpass
POSTGRES_PORT=5432

# Redis Configuration
REDIS_PORT=6379

# Backend Configuration
BACKEND_PORT=8000
DEBUG=True
APP_NAME=Stock Management API
APP_VERSION=1.0.0
API_V1_PREFIX=/api/v1

# Security Configuration
# IMPORTANT: Change SECRET_KEY in production!
SECRET_KEY=change-me-in-production-use-strong-random-key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost,http://localhost:5173,http://localhost:80

# Frontend Configuration
FRONTEND_PORT=5173
VITE_API_BASE_URL=http://localhost:8000/api/v1

# Nginx Configuration
NGINX_PORT=80
